- content_for :title_header do
	= link_to 'New Site', new_admin_site_path, :class => "btn", :style => "float: right; position: relative; top: -45px;"

%table.table.table-striped.table-bordered
	%thead
		%tr
			%th Name
			%th UUID
			%th Domain
			%th
	%tbody
	- @sites.each do |site|
		= content_tag_for(:tr, site) do
			%td= link_to site.name, admin_site_path(site)
			%td= site.uuid
			%td= site.domain
			%td= link_to "Edit", edit_admin_site_path(site)